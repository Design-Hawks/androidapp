<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_credits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.snowiot.snowiotsimple.Credits">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/authui_colorAccent"
        android:id="@+id/drivewaypictest"
        android:layout_marginTop="220dp"></ImageView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="295dp">

        <TextView
            android:text="Credits:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textColor="@color/authui_colorPrimary"
            android:textStyle="normal|italic" />

        <TextView
            android:text="Students: Felipe Telles and Kayla Marchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="24sp"
            android:textColor="@color/authui_colorPrimaryDark"
            android:textAlignment="center" />

        <TextView
            android:text="Advisors: Baback Izadi and Nitya Narasimhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/authui_colorPrimaryDark" />

    </LinearLayout>
</RelativeLayout>
